@model IEnumerable<CustomerRelationshipManagement.UI.Models.DBContext.CallByName>

@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container">
    <h1>View all customer calls</h1>

    <p>
        <a asp-action="ManageCustomerCallCreate" class="btn btn-sm btn-success ml-1">Create New</a>
    </p>
    <partial name="_pager" model="@pager" />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfCall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TimeOfCall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfCall)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeOfCall)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a asp-action="ManageCustomerCallEdit" asp-route-id="@item.CustomerCall_id" class="btn btn-sm btn-info ml-1">Edit</a> |
                        <a asp-action="ManageCustomerCallDetails" asp-route-id="@item.CustomerCall_id" class="btn btn-sm btn-primary ml-1">Details</a> |
                        <a asp-action="ManageCustomerCallDelete" asp-route-id="@item.CustomerCall_id" class="btn btn-sm btn-danger ml-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_pager" model="@pager" />
</div>